{
    "uci": {
        "network": [{
            "name": "guest",
            "type": "interface",
            "uci_cmd": {
                "set": {
                    "ipaddr": "192.168.3.1",
                    "netmask": "255.255.255.0",
                    "proto": "static"
                }
            }
        }],
        "dhcp": [{
            "name": "guest",
            "type": "dhcp",
            "uci_cmd": {
                "set": {
                    "interface": "guest",
                    "start": "100",
                    "leasetime": "12h",
                    "limit": "150"
                }
            }
        }],
        "firewall": [{
                "name": "guest",
                "type": "zone",
                "uci_cmd": {
                    "set": {
                        "name": "guest",
                        "network": "guest",
                        "forward": "REJECT",
                        "output": "ACCEPT",
                        "input": "REJECT"
                    }
                }
            },
            {
                "name": "guest_fwd",
                "type": "forwarding",
                "uci_cmd": {
                    "set": {
                        "src": "guest",
                        "dest": "wan"
                    }
                }
            },
            {
                "name": "guest_dhcp",
                "type": "rule",
                "uci_cmd": {
                    "set": {
                        "name": "GUEST_DHCP",
                        "src": "guest",
                        "target": "ACCEPT",
                        "proto": "udp",
                        "dest_port": "67-68"
                    }
                }
            },
            {
                "name": "guest_dns",
                "type": "rule",
                "uci_cmd": {
                    "set": {
                        "name": "GUEST_DNS",
                        "src": "guest",
                        "target": "ACCEPT",
                        "dest_port": "53"
                    },
                    "add_list": {
                        "proto": [
                            "tcp",
                            "udp"
                        ]
                    }
                }
            }
        ]
    },
    "cmd": [
        "/etc/init.d/network reload",
        "/etc/init.d/dnsmasq restart",
        "/etc/init.d/firewall restart"
    ]
}
